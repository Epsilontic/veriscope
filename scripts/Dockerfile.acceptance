FROM python:3.11-slim

WORKDIR /work

COPY . /work

RUN apt-get update \
  && apt-get install -y --no-install-recommends bash git \
  && rm -rf /var/lib/apt/lists/*

RUN python -m pip install --upgrade pip \
  && python -m pip install -e ".[torch]" \
  && python -m pip install requests

CMD ["bash"]
