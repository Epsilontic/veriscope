# CUDA runtime base (good default for H100; driver on host provides kernel interface)
FROM nvidia/cuda:12.1.0-cudnn8-runtime-ubuntu22.04

ENV DEBIAN_FRONTEND=noninteractive \
    PYTHONUNBUFFERED=1 \
    PIP_DISABLE_PIP_VERSION_CHECK=1

RUN apt-get update && apt-get install -y --no-install-recommends \
    python3 python3-venv python3-pip \
    git ca-certificates curl build-essential \
 && rm -rf /var/lib/apt/lists/*

# PyTorch CUDA wheels (cu121 here to match the base)
RUN python3 -m pip install --upgrade pip \
 && python3 -m pip install --extra-index-url https://download.pytorch.org/whl/cu121 \
    torch

WORKDIR /workspace
CMD ["/bin/bash"]
